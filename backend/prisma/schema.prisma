generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model MentorSchema{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  lastname String
  email String @unique
  password String
  mentordetail MentorDetail[]
}
model MentorDetail{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  mentorId String @db.ObjectId
  lat String?
  long String?
  field String
  socialmedia Json
  mentorschema MentorSchema @relation(fields: [mentorId],references: [id])
}

model UserSchema{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  lastname String
  email String @unique
  password String
  userdetail   UserDetail[]
}
model UserDetail{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  lat String?
  long String?
  userId String @db.ObjectId
  phone Int
  state String
  currentstd String
  age Int
  gender String
  fieldofinterest String
  socialmedia Json?
  Stemresponse Json?
  Interestbasedresponse Json? 
  userschema   UserSchema  @relation(fields: [userId], references: [id])
}
model Question {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String
  createdAt DateTime @default(now())
  author    String
  authorid  String
  answers   Answer[]
}
model Answer {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  content    String
  createdAt  DateTime @default(now())
  questionId String @db.ObjectId
  author     String
  authorid  String
  question   Question  @relation(fields: [questionId], references: [id])
}
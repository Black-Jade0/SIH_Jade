generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model MentorSchema{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  lastname String
  email String @unique
  password String
  lat String?
  long String?
  field String
  socialmedia Json
}

model UserSchema{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  lastname String
  email String @unique
  password String
  lat String?
  long String?
  phone Int
  state String
  currentstd String
  age Int
  gender String
  fieldofinterest String
  socialmedia Json?
  Stemresponse Json?
  Interestbasedresponse Json? 
}